set xlabel 'Nombre de pas'
set ylabel 'Déplacement carré moyen'
set logscale xy
f(x) = exp(a*log(x))
fit f(x) 'r2vsN.txt' using 1:2 via a
title_f(a,b) = sprintf('f(x) = %.2fx', a)
plot "r2vsN.txt" using 1:2:3 with yerrorbars title "Marches aléatoire", f(x) t title_f(a,b)
plot "r2vsNM.txt" using 1:2
pause -1 "Hit any key to continue"
